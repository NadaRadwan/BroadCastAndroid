<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nada.broadcast.Home">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:id="@+id/fragcontent"
        android:layout_alignParentStart="true"></FrameLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/menu">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/button12"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:onClick="toBrowsePage"/>

            <Button
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="2"
                android:id="@+id/button13"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:onClick="toListeningPage"/>

            <Button
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="3"
                android:id="@+id/button14"
                android:singleLine="false"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:onClick="toRecordActivity"/>

            <Button
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="4"
                android:id="@+id/button15"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:onClick="toFavouritesPage"/>

            <Button
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="5"
                android:id="@+id/button16"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:onClick="toProfilePage"/>
        </TableRow>
    </TableLayout>

</RelativeLayout>
